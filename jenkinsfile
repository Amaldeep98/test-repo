@Library('my-shared-library') _

pipeline {
    agent any

    environment {
        IMAGE_NAME = 'ayoobki/maven-app'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Amaldeep98/Memory-Monster.git', branch: 'master'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
    }

    post {
        always {
            notifyPost()
        }
    }
}
